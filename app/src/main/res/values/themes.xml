        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="gmts_CardView.Padding" parent="@style/CardView">
        <item name="cardCornerRadius">@dimen/gmts_card_corner_radius</item>
        <item name="cardElevation">@dimen/gmts_card_elevation</item>
        <item name="cardMaxElevation">@dimen/gmts_card_elevation</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
    <style name="gmts_TextMarginsStandard">
        <item name="android:layout_marginLeft">@dimen/gmts_text_margin_horiz</item>
        <item name="android:layout_marginTop">@dimen/gmts_text_margin_vert</item>
        <item name="android:layout_marginRight">@dimen/gmts_text_margin_horiz</item>
        <item name="android:layout_marginBottom">@dimen/gmts_text_margin_vert</item>
    </style>
    <style name="gmts_FontHeadline2">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/gmts_dark_gray</item>
        <item name="android:lineSpacingExtra">4.0dip</item>
