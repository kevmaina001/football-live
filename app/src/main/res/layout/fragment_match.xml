<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/background_color" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/headingRl" android:background="@color/main_color" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="5dp">
            <ImageView android:id="@+id/menuIcon" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/schedule" android:scaleType="fitXY" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/matches" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/menuIcon"/>
        </RelativeLayout>
        <View android:id="@+id/headingLine" android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/headingRl"/>
        <com.google.android.material.tabs.TabLayout android:id="@+id/tab_layout" android:background="@color/main_color" android:paddingTop="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/headingLine" android:paddingStart="2dp" android:paddingEnd="2dp" app:tabIndicatorColor="@color/active_color" app:tabIndicatorHeight="2dp" app:tabTextColor="@color/white"/>
        <androidx.viewpager.widget.ViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/tab_layout"/>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottiId" android:visibility="gone" android:layout_width="250dp" android:layout_height="200dp" android:layout_centerInParent="true" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/loading"/>
    </RelativeLayout>
</FrameLayout>
