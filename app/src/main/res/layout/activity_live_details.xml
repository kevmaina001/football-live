<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@color/secondary_color" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:id="@+id/headingLL" android:paddingTop="5dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <include android:id="@+id/toolbar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" layout="@layout/toolbar_one"/>
        <View android:id="@+id/line1" android:background="@color/white" android:layout_width="match_parent" android:layout_height="0.2dp" android:layout_below="@+id/toolbar"/>
    </RelativeLayout>
    <LinearLayout android:id="@+id/LeagueScheduleActivityscoreId" android:paddingTop="10dp" android:paddingBottom="5dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="2" android:layout_below="@+id/headingLL" android:paddingStart="5dp" android:paddingEnd="5dp">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/homeLL" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:layout_weight="1">
            <androidx.cardview.widget.CardView android:layout_width="60dp" android:layout_height="60dp" app:cardCornerRadius="15dp">
                <LinearLayout android:gravity="center" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/LeagueScheduleActivitystatisticsHomeIconId" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/LeagueScheduleActivitystatisticsHomeNameId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:layout_gravity="center_vertical" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:id="@+id/LeagueScheduleActivitystatisticsGoalTvId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:gravity="center" android:id="@+id/LeagueScheduleActivitystatisticsTimeTvId" android:background="@drawable/background_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp" android:layout_marginEnd="10dp"/>
        </LinearLayout>
        <LinearLayout android:gravity="center" android:orientation="vertical" android:id="@+id/awayLL" android:clickable="true" android:layout_width="0dp" android:layout_height="wrap_content" android:foreground="?attr/selectableItemBackground" android:layout_weight="1">
            <androidx.cardview.widget.CardView android:layout_width="60dp" android:layout_height="60dp" app:cardCornerRadius="15dp">
                <LinearLayout android:gravity="center" android:padding="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
                    <ImageView android:id="@+id/LeagueScheduleActivitystatisticsAwayIconId" android:layout_width="match_parent" android:layout_height="match_parent"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView android:textSize="12sp" android:textColor="@color/white" android:id="@+id/LeagueScheduleActivitystatisticsAwayNameId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="3dp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/leagueScheduleHeadingLL" android:layout_width="match_parent" android:layout_height="40dp" android:layout_below="@+id/LeagueScheduleActivityscoreId">
        <com.google.android.material.tabs.TabLayout android:id="@+id/leagueScheduleDetailsTabLayout" android:background="@color/secondary_color" android:paddingTop="2dp" android:paddingBottom="2dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="2dp" android:paddingEnd="2dp" app:tabIndicatorColor="@color/active_color" app:tabIndicatorHeight="2dp" app:tabTextColor="@color/white"/>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager android:id="@+id/scheduleDetailsViewPager" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="10dp" android:layout_above="@+id/banner_linear" android:layout_below="@+id/leagueScheduleHeadingLL"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/banner_linear" android:background="@color/main_color" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true"/>
    <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottiId" android:visibility="gone" android:layout_width="250dp" android:layout_height="200dp" android:layout_centerInParent="true" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/loading"/>
</RelativeLayout>
