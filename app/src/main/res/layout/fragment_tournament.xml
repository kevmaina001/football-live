<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout android:background="@color/main_color" android:layout_width="match_parent" android:layout_height="match_parent">
        <RelativeLayout android:id="@+id/headingRl" android:background="@color/main_color" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingStart="15dp" android:paddingEnd="5dp">
            <ImageView android:id="@+id/menuIcon" android:layout_width="30dp" android:layout_height="30dp" android:src="@drawable/trophy" android:scaleType="fitXY" android:layout_centerVertical="true"/>
            <TextView android:textSize="18sp" android:textStyle="bold" android:textColor="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/league" android:layout_centerVertical="true" android:layout_marginStart="15dp" android:layout_toEndOf="@+id/menuIcon"/>
        </RelativeLayout>
        <View android:id="@+id/headingLine" android:background="@color/white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/headingRl"/>
        <LinearLayout android:id="@+id/leagueSearchViewLL" android:background="@drawable/background_black_2" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="10dp" android:layout_below="@+id/headingLine">
            <SearchView android:theme="@style/Widget.AppCompat.SearchView" android:id="@+id/leagueSearchViewId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:backgroundTint="@color/secondary_color" android:closeIcon="@drawable/ic_baseline_close_24" android:searchIcon="@drawable/ic_baseline_search_24"/>
        </LinearLayout>
        <LinearLayout android:background="@drawable/top_round_corner_white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@+id/leagueSearchViewLL">
            <androidx.recyclerview.widget.RecyclerView android:id="@+id/recyclerView" android:layout_width="match_parent" android:layout_height="match_parent"/>
        </LinearLayout>
        <com.airbnb.lottie.LottieAnimationView android:id="@+id/lottiId" android:visibility="gone" android:layout_width="250dp" android:layout_height="200dp" android:layout_centerInParent="true" app:lottie_autoPlay="true" app:lottie_loop="true" app:lottie_rawRes="@raw/loading"/>
    </RelativeLayout>
</FrameLayout>
