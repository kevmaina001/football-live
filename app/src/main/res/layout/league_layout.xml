<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="2dp" app:cardCornerRadius="10dp" app:cardElevation="2dp">
    <RelativeLayout android:padding="10dp" android:layout_width="match_parent" android:layout_height="wrap_content">
        <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_toLeftOf="@+id/leagueOne">
            <ImageView android:id="@+id/leagueIconId" android:layout_width="50dp" android:layout_height="30dp"/>
            <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="12sp" android:textColor="@color/black" android:id="@+id/leagueNameId" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
                <TextView android:textSize="10sp" android:textColor="@color/black" android:id="@+id/durationDate" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView android:id="@+id/leagueOne" android:layout_width="24dp" android:layout_height="24dp" android:src="@drawable/baseline_favorite_border_24" android:scaleType="fitXY" android:layout_centerVertical="true" android:layout_marginEnd="5dp" android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
