    <Button android:id="@+id/gmts_action_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/gmts_padding_outer_default" android:layout_marginBottom="0dp" android:text="@string/gmts_button_load_ad" style="@style/gmts_BlueButton"/>
    <FrameLayout android:id="@+id/gmts_ad_view_frame" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/gmts_padding_outer_default"/>
    <include android:id="@+id/gmts_native_assets" android:visibility="gone" layout="@layout/gmts_view_native_assets"/>
</LinearLayout>
