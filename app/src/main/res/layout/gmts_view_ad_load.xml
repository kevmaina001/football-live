<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center" android:layout_gravity="center_horizontal" android:orientation="vertical" android:background="@color/gmts_light_text" android:padding="@dimen/gmts_padding_outer_large" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/gmts_image_view" android:background="@drawable/gmts_blank_bg_radius" android:paddingLeft="@dimen/gmts_ad_load_image_padding_sides" android:paddingTop="@dimen/gmts_ad_load_image_padding_top_bottom" android:paddingRight="@dimen/gmts_ad_load_image_padding_sides" android:paddingBottom="@dimen/gmts_ad_load_image_padding_top_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/gmts_quantum_ic_warning_white_24" android:maxHeight="28dp"
        android:minHeight="28dp"
        app:tint="@color/gmts_warning" />
    <TextView android:textAppearance="@style/gmts_FontHeadline2" android:gravity="center" android:id="@+id/gmts_title_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/gmts_padding_outer_small" android:text="@string/gmts_not_tested_title" android:textAlignment="center"/>
